<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <title>Register Turtle</title>
    <link rel="shortcut icon" type="image/png" href="../img/tutrleLogoCircle.png">
</head>

<body class="bg-light" style="min-height: 1500px;">



    <div class="container">
        <div class="py-5 text-center">
            <img class="mb-4 d-block mx-auto" src="../img/tutrleLogoCircle.png" alt="Tutrle Logo" width="72" height="72">
            <h2>Turtle Registartion</h2>
            <p class="lead">Please be as specific as possible.</p>
            <button class="btn btn-primary btn-lg btn-block" onclick="goBack()">Go Back</button>
        </div>
    </div>

    <div class="container">
        <h4 class="mb-3">Turtle data</h4>
        <% if (typeof error !== "undefined") { %>
            <p style="color: red">
                <%=error%>
            </p>
            <% } %>

                <form method="POST" action="/turtles/registration">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isTurteRegistered" />
                                <label class="form-check-label" for="flexCheckDefault">
                            Is turtle registered
                            </label>
                            </div>

                            <div class="col-12">

                                <div class="input-group">
                                    <span class="input-group-text">ID</span>
                                    <input name="id" id="username" type="text" class="form-control" placeholder="1" required>
                                </div>
                                <div class="invalid-feedback">
                                    Valid ID is required.
                                </div>
                            </div>
                            <hr class="my-4">
                        </div>

                        <div class="col-12">
                            <label for="username" class="form-label">Breed</label>
                            <div class="input-group">
                                <input name="breed" id="username" type="text" class="form-control" placeholder="Sea turtle" required>
                            </div>
                            <div class="invalid-feedback">
                                Valid breed is required.
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <label for="username" class="form-label">Age</label>
                            <div class="form-group">
                                <select name="age" class="form-control" id="" required>
                                    
                      <% for(let i = 1; i <= 150; i++) { %>
                      <option><%= i%></option>
                      <% } %>
                     
                    
                    </select>
                            </div>

                        </div>

                        <div class="col-sm-12" id="genderPanel">
                            <span class="input-group-text">Gender</span>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="turtleGender" id="flexRadioDefault3">
                                <label class="form-check-label" for="flexRadioDefault3">
                        Male
                        </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="turtleGender" id="flexRadioDefault4">
                                <label class="form-check-label" for="flexRadioDefault4">
                        Female
                        </label>
                            </div>

                        </div>

                        <div class="col-sm-12">
                            <label for="Gender" class="form-label">Accepted On</label>
                            <input id="datepicker" name="acceptedDate" width="1110" />
                        </div>

                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputCity">Town</label>
                                    <input type="text" name="Town" class="form-control" id="inputCity" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputState">Place</label>
                                    <input type="text" name="Place" class="form-control" id="inputState" required>
                                </div>

                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="isInjured" />
                                <label class="form-check-label" for="flexCheckDefault">
                            Is Injured
                            </label>
                            </div>

                            <div class="col-sm-12">
                                <label for="username" class="form-label">Injury severity</label>
                                <div class="form-group">

                                    <select name="Severity" class="form-control" id="severity" required>
                               
                                        <% for(let i = 1; i <= 10; i++) { %>
                                            <option><%= i%></option>
                                            <% } %>

                        </select>

                                </div>
                            </div>
                        </div>

                        <h4 class="mb-3">Donator data</h4>

                        <div class="col-sm-12">

                            <label for="username" class="form-label">Name</label>
                            <div class="input-group">
                                <input name="donatorName" id="firstName" type="text" class="form-control">
                            </div>

                            <div class="invalid-feedback">
                                Valid Id is required.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="username" class="form-label">Phone number</label>
                            <div class="input-group">
                                <input name="donatorPhone" id="username" type="text" class="form-control" placeholder="089123456" required>
                            </div>
                            <div class="invalid-feedback">
                                Valid breed is required.
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="btn btn-primary btn-lg btn-block">Submit</button>

                    </div>

                </form>
    </div>

    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4 ',
            format: 'yyyy-mm-dd'
        });
        $("select[name=Severity]").prop("disabled", true);
        $("select[name=Severity]").val('');
        $("input[name=id]").prop("disabled", true);
        $("input[name=id]").val('');

        $(() => {
            $("input[name=isTurteRegistered]").on("change", function() {
                if ($(this).is(":checked")) {
                    $("input[name=breed]").prop("disabled", true);
                    $("input[name=id]").prop("disabled", false);
                    $("input[name=turtleGender]").prop("disabled", true);
                    $("input[name=breed]").val('');

                    $("input[name=turtleGender]").prop("checked", false);

                } else {
                    $("input[name=breed]").prop("disabled", false);
                    $("input[name=id]").prop("disabled", true);
                    $("input[name=id]").val('');
                    $("input[name=turtleGender]").prop("disabled", false);
                }
            })
        })


        $(() => {
            $("input[name=isInjured]").on("change", function() {
                if ($(this).is(":checked")) {
                    $("select[name=Severity]").prop("disabled", false);


                } else {
                    $("select[name=Severity]").prop("disabled", true);
                    $("select[name=Severity]").val('');
                }
            })
        })
    </script>

    <!-- JavaScript -->
    <script src="../js/main.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>

</html>